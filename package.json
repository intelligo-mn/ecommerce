{
  "name": "platform.sale",
  "version": "2.1.0",
  "private": true,
  "author": "RedQ, Inc.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces run rimraf \"{.next,node_modules}\" && rimraf node_modules",
    "dev:store": "yarn workspace @intelligo/store dev",
    "build:store": "yarn workspace @intelligo/store build",
    "start:store": "yarn workspace @intelligo/store start",
    "dev:dashboard": "yarn workspace @intelligo/dashboard dev",
    "build:dashboard": "yarn workspace @intelligo/dashboard build",
    "start:dashboard": "yarn workspace @intelligo/dashboard start",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,css}": [
      "prettier --trailing-comma es5 --write"
    ]
  }
}
