{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@intelligo-mn/chart": ["libs/chart/src/index.ts"],
      "@intelligo-mn/icons": ["libs/icons/src/index.ts"],
      "@intelligo/common": ["libs/common/src/index.ts"],
      "@intelligo/config": ["libs/config/src/index.ts"],
      "@intelligo/context": ["libs/context/src/index.ts"],
      "@intelligo/graphql": ["libs/graphql/src/index.ts"],
      "@intelligo/store": ["libs/store/src/index.ts"],
      "@intelligo/utils": ["libs/utils/src/index.ts"],
      "@platform/common": ["libs/common/src/index.ts"],
      "@platform/config": ["libs/config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
